{
  "openapi": "3.1.1",
  "info": {
    "title": "DevTool.WebApi | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5235/"
    }
  ],
  "paths": {
    "/api/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Retrieves all products",
        "description": "Returns a list of all products currently available in the catalog, with optional filtering by name, category, and price range.",
        "operationId": "GetAllProducts",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "categoryId",
            "in": "query",
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": [
                "integer",
                "string"
              ],
              "format": "int32"
            }
          },
          {
            "name": "minPrice",
            "in": "query",
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
              "type": [
                "number",
                "string"
              ],
              "format": "double"
            }
          },
          {
            "name": "maxPrice",
            "in": "query",
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
              "type": [
                "number",
                "string"
              ],
              "format": "double"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Creates a new product",
        "description": "Adds a new product to the catalog with the provided details.",
        "operationId": "CreateProduct",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateProductRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/products/{id}": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Retrieves a product by ID",
        "description": "Returns a single product based on its unique identifier.",
        "operationId": "GetProductById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Products"
        ],
        "summary": "Updates an existing product",
        "description": "Updates the details of an existing product identified by its ID.",
        "operationId": "UpdateProduct",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateProductRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Products"
        ],
        "summary": "Deletes a product",
        "description": "Removes a product from the catalog by its unique identifier.",
        "operationId": "DeleteProduct",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/categories": {
      "get": {
        "tags": [
          "Categories"
        ],
        "summary": "Retrieves all categories",
        "description": "Returns a list of all product categories available.",
        "operationId": "GetAllCategories",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Categories"
        ],
        "summary": "Creates a new category",
        "description": "Adds a new product category to the system.",
        "operationId": "CreateCategory",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCategoryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/categories/{id}": {
      "get": {
        "tags": [
          "Categories"
        ],
        "summary": "Retrieves a category by ID",
        "description": "Returns details of a single category identified by its ID.",
        "operationId": "GetCategoryById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Categories"
        ],
        "summary": "Updates an existing category",
        "description": "Modifies an existing product category's details.",
        "operationId": "UpdateCategory",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateCategoryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Categories"
        ],
        "summary": "Deletes a category",
        "description": "Removes a category if it has no associated products.",
        "operationId": "DeleteCategory",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/inventory": {
      "get": {
        "tags": [
          "Inventory"
        ],
        "summary": "Retrieves all inventory records",
        "description": "Returns a list of inventory status for all products.",
        "operationId": "GetAllInventory",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/inventory/{productId}": {
      "get": {
        "tags": [
          "Inventory"
        ],
        "summary": "Retrieves inventory for a specific product",
        "description": "Returns the inventory level and location for the product identified by its ID.",
        "operationId": "GetInventoryByProductId",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Inventory"
        ],
        "summary": "Updates product inventory",
        "description": "Updates the stock quantity or location for a specific product.",
        "operationId": "UpdateInventoryQuantity",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateInventoryQuantityRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/orders": {
      "get": {
        "tags": [
          "Orders"
        ],
        "summary": "Retrieves all orders",
        "description": "Returns a list of all historical customer orders.",
        "operationId": "GetAllOrders",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Orders"
        ],
        "summary": "Creates a new order",
        "description": "Places a new order for one or more products.",
        "operationId": "CreateOrder",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/orders/{id}": {
      "get": {
        "tags": [
          "Orders"
        ],
        "summary": "Retrieves an order by ID",
        "description": "Returns the full details of a specific order, including its items.",
        "operationId": "GetOrderById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateCategoryRequest": {
        "required": [
          "name",
          "code"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "description": "The name. <example>Electronics</example>"
          },
          "code": {
            "maxLength": 10,
            "minLength": 0,
            "type": "string",
            "description": "The code. <example>ELEC</example>"
          }
        },
        "description": "Request to create a new category."
      },
      "CreateOrderItemRequest": {
        "required": [
          "productId",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "description": "The product ID. <example>1</example>",
            "format": "int32"
          },
          "quantity": {
            "maximum": 1000,
            "minimum": 1,
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "description": "The quantity. <example>2</example>",
            "format": "int32"
          }
        },
        "description": "Request to add an item to a new order."
      },
      "CreateOrderRequest": {
        "required": [
          "customerName",
          "items"
        ],
        "type": "object",
        "properties": {
          "customerName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "description": "The name. <example>John Doe</example>"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateOrderItemRequest"
            },
            "description": "The items. <example>[{\"productId\": 1, \"quantity\": 2}]</example>"
          }
        },
        "description": "Request to create a new customer order."
      },
      "CreateProductRequest": {
        "required": [
          "name",
          "description",
          "price",
          "stock",
          "categoryId"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "description": "The name of the product. <example>Smartphone X</example>"
          },
          "description": {
            "maxLength": 500,
            "minLength": 0,
            "type": [
              "null",
              "string"
            ],
            "description": "A brief description of the product. <example>Latest flagship smartphone with 5G.</example>"
          },
          "price": {
            "maximum": 10000,
            "minimum": 0.01,
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "description": "The unit price. <example>999.99</example>",
            "format": "double"
          },
          "stock": {
            "maximum": 1000000,
            "minimum": 0,
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "description": "The stock level. <example>50</example>",
            "format": "int32"
          },
          "categoryId": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "description": "The category ID. <example>1</example>",
            "format": "int32"
          }
        },
        "description": "Request to create a new product."
      },
      "UpdateCategoryRequest": {
        "required": [
          "name",
          "code"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 0,
            "type": [
              "null",
              "string"
            ],
            "description": "The name. <example>Consumer Electronics</example>"
          },
          "code": {
            "maxLength": 10,
            "minLength": 0,
            "type": [
              "null",
              "string"
            ],
            "description": "The code. <example>CELEC</example>"
          }
        },
        "description": "Request to update an existing category."
      },
      "UpdateInventoryQuantityRequest": {
        "required": [
          "quantity",
          "location"
        ],
        "type": "object",
        "properties": {
          "quantity": {
            "maximum": 1000000,
            "minimum": 0,
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "description": "The new quantity. <example>100</example>",
            "format": "int32"
          },
          "location": {
            "maxLength": 200,
            "minLength": 0,
            "type": [
              "null",
              "string"
            ],
            "description": "The new location. <example>Warehouse A, Aisle 4</example>"
          }
        },
        "description": "Request to update the quantity or location of a product's inventory."
      },
      "UpdateProductRequest": {
        "required": [
          "name",
          "description",
          "price",
          "stock",
          "categoryId"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 10,
            "minLength": 0,
            "type": [
              "null",
              "string"
            ],
            "description": "The name. <example>Smartphone X Pro</example>"
          },
          "description": {
            "maxLength": 500,
            "minLength": 0,
            "type": [
              "null",
              "string"
            ],
            "description": "The description. <example>Updated description.</example>"
          },
          "price": {
            "maximum": 10000,
            "minimum": 0.01,
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
            "type": [
              "null",
              "number",
              "string"
            ],
            "description": "The price. <example>1099.99</example>",
            "format": "double"
          },
          "stock": {
            "maximum": 1000000,
            "minimum": 0,
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "null",
              "integer",
              "string"
            ],
            "description": "The stock. <example>45</example>",
            "format": "int32"
          },
          "categoryId": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "null",
              "integer",
              "string"
            ],
            "description": "The category ID. <example>1</example>",
            "format": "int32"
          }
        },
        "description": "Request to update an existing product."
      }
    }
  },
  "tags": [
    {
      "name": "Products"
    },
    {
      "name": "Categories"
    },
    {
      "name": "Inventory"
    },
    {
      "name": "Orders"
    }
  ]
